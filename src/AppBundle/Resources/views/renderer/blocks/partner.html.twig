<div rel="blocks" typeof="block">
    <div property="partnerData">
        {% set background = "" %}

        {% if block.partnerData|length
            and block.partnerData|first.background|length
            and block.partnerData|first.background|first.thumbnails['1920x1080'] is defined %}
            {% set background = block.partnerData|first.background|first.thumbnails['1920x1080'] %}
        {% endif %}

        <section class="partner" style="background-image: url('{{ background }}')">
            <div class="partner-frame">
                <div class="partner-frame-content">
                    {% if block.partnerData|length %}
                        {% if block.partnerData|first.title|default("") %}
                            <p class="partner-frame-content-heading">
                                {{ block.partnerData|first.title }}
                            </p>
                        {% endif %}

                        <div class="partner-frame-content-scroll">
                            <div class="partner-frame-content-scroll-images">
                                {% for image in block.partnerData|first.images if image.thumbnails["x80"] is defined %}
                                    <img src="{{ asset(image.thumbnails["x80"]) }}"
                                         alt="{{ image.title }}"
                                         class="partner-frame-content-scroll-images-image"/>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>
    </div>
</div>