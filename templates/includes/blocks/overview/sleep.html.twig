<section class="section section-sleep" data-name="sleep" data-anim-scroll-group="sleep" data-analytics-section-engagement="name:sleep">
    <div class="section-main-content">
        <div class="section-content-inside">
            <div class="section-block">
                <h2 class="section-block-headline typography-section-headline" data-text-zoom-max="1.75">
                     {% if content.title %}<span class="headline {% if content.raidbow_txt %}raidbow-txt{% endif %}">{{ content.title|raw }}</span>{% endif %}
                     {% if content.subtitle %}<span class="subhead">{{ content.subtitle|raw }}</span>{% endif %}
                </h2>
                {% if content.description %}<p class="section-block-intro typography-section-intro">{{ content.description|raw }}</p>{% endif %}
            </div>
            <div class="sleep-video-watch">
                <div class="sleep-video-container section-media" data-component-list="Sensor">
                    <div class="video-container" role="img" aria-label="New watch Sensor animation" aria-hidden="true">
                        <div class="visuallyhidden focus-item" tabindex="-1"></div>
                        <figure class="static" data-anim-lazy-image></figure>
                        <figure class="start-frame" data-anim-lazy-image></figure>
                        <video class="media-video" muted="" playsinline="true" aria-hidden="true" data-video-source-basepath="/build/website/mp4/sleep/" data-video-source-retina-enabled="true"></video>
                        <figure class="end-frame" data-anim-lazy-image></figure>
                    </div>
                </div>
            </div>
            {# <figure class="sleep-image-watch" data-anim-lazy-image></figure> #}
        </div>
    </div>
</section>
