
{% set customClass = '' %}
{% if content.custom_class is defined %}
    {% set customClass = content.custom_class|default('') %}
{% endif %}
{% if content.request_mod is defined %}
    {% set requestMod = content.request_mod|default('') %}
{% endif %}

 <!-- This is the modal -->
{% if content.request_mod|length %}
<div id="{{ requestMod }}" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
{% endif %}     
      <div class="row center-xs {{ customClass }}">
          <div class="col-xs-12 pad-xs-y">
              <div class="container-bg">
                  <div class="row center-xs pad-xs-y">
                      {% if content.display_heading|default(true) %}
                          <div class="row center-xs">
                              {% set heading = {
                                  'title': content.title|default(),
                                  'heading_level': 2,
                              } %}
                          </div>
                      {% endif %}

                      {% if app.request.get('send') == 'true' %}
                          <script>
                              document.onreadystatechange = function () {
                                  if (document.readyState === 'complete') {
                                      new Noty({
                                          theme: 'sunset',
                                          text: ' {{ view.form.entity.successText|trim|raw }}  ',
                                          type: 'success',
                                          container: '.ln-wrapper',
                                          timeout: 5000
                                      }).show();
                                  }
                              };
                          </script>
                      {% endif %}
                      {% set submit = null %}

                      {% form_theme content.form '@SuluForm/themes/dynamic.html.twig' %}
                      {{ form_start(content.form, {'attr': {'class': 'col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xl-5 pad-xs'}}) }}

                      {% for name, content in content.form %}
                          {% set widget = attribute(content.form, name) %}
                          {% if
                              (('hidden' not in widget.vars.content_prefixes)
                              and ('submit' not in widget.vars.content_prefixes))
                              or 'freeText' == widget.vars.attr.type|default() %}
                              {% if 'freeText' == widget.vars.attr.type|default() %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                          {{ form_row(widget) }}
                                      </div>
                                  </div>
                              {% elseif 'textarea' in content.vars.content_prefixes %}
                                  <div class="row-xs">
                                      <div class="input-field col-xs-12">
                                          {{ form_widget(widget, {'attr': {'class': 'materialize-textarea validate'}}) }}
                                          {{ form_label(widget, null, {'label_attr': {'class': 'active'} }) }}
                                          <div class="form-errors">
                                              {{ form_errors(widget) }}
                                          </div>
                                      </div>
                                  </div>
                              {% elseif 'date' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12 center">
                                          <div>
                                              <span>
                                                  {{ form_label(widget) }}
                                              </span>


                                              {% for child in widget.children %}
                                                  <div>
                                                      {% if child.vars.name == 'day' %}
                                                          {% set _ph = 'day_placeholder' %}
                                                      {% elseif child.vars.name == 'month' %}
                                                          {% set _ph = 'month_placeholder' %}
                                                      {% elseif child.vars.name == 'year' %}
                                                          {% set _ph = 'year_placeholder' %}
                                                      {% else %}
                                                          {% set _ph = 'select_placeholder' %}
                                                      {% endif %}

                                                      {{ form_widget(child, {'attr': {'class': 'validate'}, 'placeholder': _ph|trans}) }}
                                                  </div>
                                              {% endfor %}

                                              <div class="form-errors">
                                                  {{ form_errors(widget) }}
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              {% elseif 'choice' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                          {% if widget.children|length %}
                                              <div class="pad-xs-y">
                                                  {{ form_label(widget, null, {'label_attr': {'class': 'pos-rel display-content'}}) }}
                                              </div>
                                              {% for child in widget.children %}
                                                  <div class="pad-xs-x">
                                                      <label>
                                                          {{ form_widget(child, {'attr': {'class': 'validate'}}) }}
                                                          <span>
                                                              {{ form_label(child) }}
                                                          </span>
                                                          <div class="form-errors">
                                                              {{ form_errors(child) }}
                                                          </div>
                                                      </label>
                                                  </div>
                                              {% endfor %}
                                          {% else %}
                                              <div class="row center-xs">
                                                  <div class="input-field col-xs-12">
                                                      {% if not content.vars.multiple %}
                                                          {{ form_widget(widget, {'attr': {'class': 'validate'}, 'placeholder': 'select_placeholder'|trans}) }}
                                                      {% else %}
                                                          {{ form_widget(widget, {'attr': {'class': 'validate'}}) }}
                                                      {% endif %}
                                                      {{ form_label(widget) }}
                                                      <div class="form-errors">
                                                          {{ form_errors(widget) }}
                                                      </div>
                                                  </div>
                                              </div>
                                          {% endif %}
                                      </div>
                                  </div>
                              {% elseif 'file' in content.vars.content_prefixes %}
                                  <div class="file-field input-field col-xs-12">
                                      <div class="button button--light btn">
                                          <span>
                                              {{ form_label(widget) }}
                                          </span>
                                          {{ form_widget(widget, {'attr': {'class': ''}}) }}
                                      </div>
                                      <div class="file-path-wrapper">
                                          <input class="file-path validate" type="text" placeholder="Виберіть файл(и)">
                                      </div>
                                      <div class="row pad-xs">
                                          <div class="form-errors">
                                              {{ form_errors(widget) }}
                                          </div>
                                      </div>
                                  </div>
                              {% elseif '_dynamic_form_phone' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                          {{ form_widget(widget, {'type': 'tel', 'attr': {'class': 'validate'}}) }}
                                          {{ form_label(widget) }}
                                          <div class="form-errors">
                                              {{ form_errors(widget) }}
                                          </div>
                                      </div>
                                  </div>
                              {% elseif 'text' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12 center">
                                          {{ form_widget(widget, {'attr': {'class': 'validate'}}) }}
                                          {{ form_label(widget) }}
                                          <div class="form-errors">
                                              {{ form_errors(widget) }}
                                          </div>
                                      </div>
                                  </div>
                              {% elseif 'checkbox' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                              <span>
                                                  {{ form_label(widget) }}
                                              </span>
                                          {{ form_widget(widget, {'attr': {'class': 'validate'}}) }}
                                          <div class="form-errors">
                                              {{ form_errors(widget) }}
                                          </div>
                                      </div>
                                  </div>
                              {% else %}
                                  {{ form_row(widget) }}
                              {% endif %}
                          {% elseif 'submit' in content.vars.content_prefixes %}
                              {% set submit = widget %}
                          {% else %}
                              {% if '_dynamic_form_headline' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                          {{ form_row(widget) }}
                                      </div>
                                  </div>
                              {% elseif '_dynamic_form_spacer' in content.vars.content_prefixes %}
                                  <div class="row center-xs">
                                      <div class="input-field col-xs-12">
                                          {{ form_row(widget) }}
                                          <hr>
                                      </div>
                                  </div>
                              {#{% elseif 'hidden' in content.vars.content_prefixes %}#}
                                  {#{{ form_row(widget) }}#}
                              {% else %}
                                  {{ form_row(widget) }}
                                  {{ dump(content.vars.content_prefixes) }}
                              {% endif %}
                          {% endif %}
                      {% endfor %}

                      {% if submit %}
                          <div class="row center-xs">
                              {{ form_widget(submit,  {'label': 'send'|trans, 'icon': 'send', 'attr': {'class': 'button button--future'}}) }}

                          </div>
                      {% endif %}
                      {{ form_end(content.form) }}
                  </div>
              </div>
          </div>
      </div>
{% if content.request_mod|length %}
    </div>
</div>
{% endif %}

{{ dump(content)  }}