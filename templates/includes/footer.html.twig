    <section class="site-footer js-site-footer ">
        <div class="site-footer__section site-footer__section--secondary">
            <ul class="site-footer__legal">
                <li class="item item-menu">
                    <a href="{{ sulu_content_path('/') }}" title="{{ 'main_page'|trans }}" class="link">
                        {{ 'main_page'|trans }}
                    </a>
                </li>
                {# @see https://docs.sulu.io/en/2.2/reference/twig-extensions/functions/sulu_navigation_root_flat.html #}
                {% for item in sulu_navigation_root_flat('footer', 1, true) %}
                {# @see https://docs.sulu.io/en/2.2/reference/twig-extensions/functions/sulu_content_path.html #}
                <li class="item item-menu">
                    <a href="{{ sulu_content_path(item.url) }}" title="{{ item.title }}" class="link">
                        {# fallback to content title when excerpt title not set #}
                        {{ item.excerpt.title|default(item.title) }}
                    </a>
                </li>
                {% endfor %}

                {#         {{ 'privacy_policy'|trans }} #}
                {#         {{ 'cookie_policy'|trans }} #}
