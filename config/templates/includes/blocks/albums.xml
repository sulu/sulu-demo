<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <block name="blocks" default-type="text">
        <!-- @see https://docs.sulu.io/en/2.1/reference/content-types/block.html -->

        <types>
            <type name="albums">
                <meta>
                    <title lang="en">Albums</title>
                    <title lang="de">Alben</title>
                </meta>

                <properties>
                    <property name="albums" type="album_selection">
                        <!-- @see https://docs.sulu.io/en/2.1/book/extend-admin.html#selection-field-type -->
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
