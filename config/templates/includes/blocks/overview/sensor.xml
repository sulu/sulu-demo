<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="sensor">
        <types>
            <type name="sensor">
                <meta>
                    <title lang="en">Sensor Block</title>
                    <title lang="uk">Sensor блок</title>
                </meta>

                <properties>
                    
                    <section name="organizationalTitles">
                        <properties>
                            <property name="title_oxygen" type="text_line" mandatory="true" colspan="6">
                                <meta>
                                    <title lang="en">Title</title>
                                    <title lang="uk">Заголовок</title>
                                </meta>
                            </property>

                            <property name="subtitle_oxygen" type="text_line" mandatory="true" colspan="6">
                                <meta>
                                    <title lang="en">SubTitle</title>
                                    <title lang="uk">Підзаголовок</title>
                                    <info_text lang="en">
                                        Text <![CDATA[<br class="large"><br class="medium">]]> text
                                    </info_text>
                                    <info_text lang="uk">
                                        Текст <![CDATA[<br class="large"><br class="medium">]]> текст
                                    </info_text>
                                </meta>
                            </property>
                        </properties>
                    </section>

                    <property name="description" type="text_area">
                        <meta>
                            <title lang="en">Description</title>
                            <title lang="uk">Опис</title>
                        </meta>
                        <params>
                            <param name="max_characters" value="350"/>
                        </params>
                    </property>
                    
                    <property name="title_sensor" type="text_line">
                        <meta>
                            <title lang="en">Title Sensor</title>
                            <title lang="uk">Заголовок Sensor</title>
                        </meta>
                    </property> 

                    <property name="typo_sensor" type="text_area">
                        <meta>
                            <title lang="en">Description Sensor</title>
                            <title lang="uk">Опис Sensor</title>
                        </meta>
                    </property>
                    
                    <property name="title_leds" type="text_line">
                        <meta>
                            <title lang="en">Title Leds</title>
                            <title lang="uk">Заголовок Leds</title>
                        </meta>
                    </property> 

                    <property name="typo_leds" type="text_area">
                        <meta>
                            <title lang="en">Description Leds</title>
                            <title lang="uk">Опис Leds</title>
                        </meta>
                    </property>
                    
                    <section name="organizationalLeds">
                        <properties>
                            <property name="link_leds" type="single_page_selection" mandatory="false" colspan="5">
                                <!-- @see https://docs.sulu.io/en/2.2/reference/content-types/single_page_selection.html -->
