<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="more">
        <types>
            <type name="more">
                <meta>
                    <title lang="en">More Block</title>
                    <title lang="uk">More Block</title>
                </meta>

                <properties>

                    <section name="organizationalTitles">
                        <properties>
                            <property name="title" type="text_line" colspan="6">
                                <meta>
                                    <title lang="en">Title</title>
                                    <title lang="uk">Заголовок</title>
                                </meta>
                            </property>

                            <property name="subtitle" type="text_line" colspan="6">
                                <meta>
                                    <title lang="en">SubTitle</title>
                                    <title lang="uk">Підзаголовок</title>
                                    <info_text lang="en">
                                        Text <![CDATA[<br class="large"><br class="medium">]]> text
                                    </info_text>
                                    <info_text lang="uk">
                                        Текст <![CDATA[<br class="large"><br class="medium">]]> текст
                                    </info_text>
                                </meta>
                            </property>
                        </properties>
                    </section>

                    <property name="description" type="text_area">
                        <meta>
                            <title lang="en">Description</title>
                            <title lang="uk">Опис</title>
                        </meta>
                    </property>

                    <section name="organizationalBlockOne">
                        <properties>
                            <property name="block_one_title" type="text_line" colspan="12">
                                <meta>
                                    <title lang="en">Title 1</title>
                                    <title lang="uk">Заголовок 1</title>
                                </meta>
                            </property>

                            <property name="block_one_desc" type="text_area" colspan="12">
                                <meta>
                                    <title lang="en">Description 1</title>
                                    <title lang="uk">Опис 1</title>
                                </meta>
                            </property>
                        </properties>
                    </section>
                    
                    <section name="organizationalBlockTwo">
                        <properties>
                            
                            <property name="block_two_title" type="text_line" colspan="12">
                                <meta>
                                    <title lang="en">Title 2</title>
                                    <title lang="uk">Заголовок 2</title>
                                </meta>
                            </property>

                            <property name="block_two_desc" type="text_area" colspan="12">
                                <meta>
                                    <title lang="en">Description 2</title>
                                    <title lang="uk">Опис 2</title>
                                </meta>
                            </property>
                            
                        </properties>
                    </section>
                    
                    <section name="organizationalBlockThree">
                        <properties>
                            
                            <property name="block_three_title" type="text_line" colspan="12">
                                <meta>
                                    <title lang="en">Title 3</title>
                                    <title lang="uk">Заголовок 3</title>
                                </meta>
                            </property>

                            <property name="block_three_desc" type="text_area" colspan="12">
                                <meta>
                                    <title lang="en">Description 3</title>
                                    <title lang="uk">Опис 3</title>
                                </meta>
                            </property>
                            
                        </properties>
                    </section>
                    
                    <section name="organizationalBlockFour">
                        <properties>
                            
                            <property name="block_four_title" type="text_line" colspan="12">
                                <meta>
                                    <title lang="en">Title 4</title>
                                    <title lang="uk">Заголовок 4</title>
                                </meta>
                            </property>

                            <property name="block_four_desc" type="text_area" colspan="12">
                                <meta>
                                    <title lang="en">Description 4</title>
                                    <title lang="uk">Опис 4</title>
                                </meta>
                            </property>
                            
                        </properties>
                    </section>
                    
                    <section name="organizationalTriger">
                        <properties>
                            <property name="theme_trigger" type="checkbox" colspan="4">
                                <meta>
                                    <title lang="en">Light Theme</title>
                                    <title lang="uk">Світла тема</title>
                                </meta>
                                <params>
                                    <param name="type" value="toggler"/>
                                </params>
                            </property>      

                            <property name="theme_params" type="text_line" colspan="4">
                                <meta>
                                    <title lang="en">Offset area (%)</title>
                                    <title lang="uk">Відступ області (%)</title>
                                </meta>
                            </property>  
                    
                            <property name="raidbow_txt" type="checkbox" colspan="4">
                                <meta>
                                    <title lang="en">Text Gradient</title>
                                    <title lang="uk">Градієнт тексту</title>
                                </meta>
                                <params>
                                    <param name="type" value="toggler"/>
                                    <param name="default_value" value="false"/>
                                </params>
                            </property>                     
                            
                        </properties>
                    </section>

                </properties>
            </type>
        </types>
    </block>
</properties>
