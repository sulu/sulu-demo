                <properties>
                    <property name="title" type="text_line">
                        <meta>
                            <title lang="en">Title</title>
                            <title lang="uk">Заголовок</title>
                            <info_text lang="en">
                                Text <![CDATA[<br class="small" />]]> text
                            </info_text>
                            <info_text lang="uk">
                                Текст <![CDATA[<br class="small" />]]> текст
                            </info_text>
                        </meta>
                    </property> 

                    <property name="description" type="text_area">
                        <meta>
                            <title lang="en">Description</title>
                            <title lang="uk">Опис</title>
                        </meta>
                        <params>
                            <param name="max_characters" value="300"/>
                        </params>
                    </property>
                    
                    <section name="organizationalDetails">
                        <properties>
                            <property name="page_one" type="single_page_selection" mandatory="false" colspan="4">
