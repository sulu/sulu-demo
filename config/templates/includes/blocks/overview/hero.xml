                            </property>

                            <property name="icon_one" type="text_line" colspan="3">
                                <meta>
                                    <title lang="en">Icon Link</title>
                                    <title lang="uk">Іконка</title>
                                </meta>
                            </property>
                        </properties>
                    </section>
                    
