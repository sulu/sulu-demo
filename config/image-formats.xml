<?xml version="1.0" encoding="UTF-8"?>
<formats xmlns="http://schemas.sulu.io/media/formats"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://schemas.sulu.io/media/formats http://schemas.sulu.io/media/formats-1.1.xsd">

    <!-- See: http://docs.sulu.io/en/latest/book/image-formats.html how to define image-formats -->

    <!--
    <format key="300x">
        <meta>
            <title lang="en">Example Image</title>
            <title lang="de">Beispielbild</title>
        </meta>

        <scale x="300"/>
    </format>
    -->

    <!--
    Render an image from the media_selection in a specific format the following way:

    <img src="{{ image.thumbnails['300x'] }}" alt="{{ image.title }}" title="{{ image.description|default(image.title) }}">
    -->
    <!--
    {% set defaultImageLG2x = asset(image.thumbnails['1064x1300']|default()) %}
    {% set defaultImageLG = asset(image.thumbnails['532x650']|default()) %}
    {% set defaultImageMD2x = asset(image.thumbnails['736x900']|default()) %}
    {% set defaultImageMD = asset(image.thumbnails['368x450']|default()) %}
    {% set defaultImageSM2x = asset(image.thumbnails['640x780']|default()) %}
    {% set defaultImageSM = asset(image.thumbnails['320x390']|default()) %}
    -->
    <format key="SliderLarge2x">
        <scale x="1920" y="1000"/>
    </format>
    
    <format key="SliderLarge">
        <scale x="960" y="500"/>
    </format>
    
    <format key="SliderMedium2x">
        <scale x="1240" y="716"/>
    </format>
    
    <format key="SliderMedium">
        <scale x="620" y="358"/>
    </format>
    
    <format key="SliderSmall2x">
        <scale x="680" y="568"/>
    </format>
    
    <format key="SliderSmall">
        <scale x="340" y="284"/>
    </format>
    
    <format key="ArticleLarge2x">
        <scale x="1064" y="1300"/>
    </format>
    
    <format key="ArticleLarge">
        <scale x="532" y="650"/>
    </format>
    
    <format key="ArticleMedium2x">
        <scale x="736" y="900"/>
    </format>
    
    <format key="ArticleMedium">
        <scale x="368" y="450"/>
    </format>
    
    <format key="ArticleSmall2x">
        <scale x="640" y="780"/>
    </format>
    
    <format key="ArticleSmall">
        <scale x="320" y="390"/>
    </format>
    
    <format key="2560x">
        <meta>
            <title lang="en">Header Image</title>
            <title lang="de">Header Bild</title>
        </meta>

        <scale x="2560"/>
    </format>

    <format key="991x">
        <meta>
            <title lang="en">Header Image (Mobile) / Content Image (Mobile)</title>
            <title lang="de">Header Bild (Mobile) / Content Image (Mobile)</title>
        </meta>

        <scale x="991"/>
    </format>

    <format key="1380x">
        <meta>
            <title lang="en">Content Image - Top/Bottom</title>
            <title lang="de">Content Bild - Oben/Unten</title>
        </meta>

        <scale x="1380"/>
    </format>

    <format key="400x">
        <meta>
            <title lang="en">Content Image - Left/Right</title>
            <title lang="de">Content Bild - Links/Rechts</title>
        </meta>

        <scale x="400"/>
    </format>

    <format key="600x400">
        <meta>
            <title lang="en">Teaser - Overview Element</title>
            <title lang="de">Teaser - Ãœbersicht Element</title>
        </meta>

        <scale x="600" y="400"/>
    </format>

    <format key="400x400">
        <meta>
            <title lang="en">Teaser - Square</title>
            <title lang="de">Teaser - Quadrat</title>
        </meta>

        <scale x="400" y="400"/>
    </format>
</formats>
